  head
    title #{title}
    meta(name = "description" content = "sample web single page with nodeJS(expressJS, template enginde jade, css engine styluss) and free template penny")
    meta(name = "keywords" content = "example nodeJS, example expressJS")
    meta(name = "author" content = "nurjalih")
    
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,600')
